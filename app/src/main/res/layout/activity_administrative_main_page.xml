<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdient_list"
    android:orientation="vertical"
    tools:context=".views.administrative.AdministrativeMainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:background="@drawable/rounded_corner_container"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/exitBtn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/softBlue"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logout"
            app:tint="@color/transparent_white" />

        <TextView
            android:id="@+id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/greetings"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/half_round_container"
        android:backgroundTint="@color/transparent_white"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:text="@string/available_actions"
            android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_corner_container"
                            android:backgroundTint="@color/softBlue"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/asignMechanicsTittle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/assign_mechanic"
                                android:textSize="20sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/asignMechanicsBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_corner_container"
                                android:backgroundTint="@color/blue"
                                android:fontFamily="sans-serif"
                                android:text="Button"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/transparent_white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_corner_container"
                            android:backgroundTint="@color/softBlue"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/newEntryTittle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/new_entry"
                                android:textSize="20sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/newEntryBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_corner_container"
                                android:backgroundTint="@color/blue"
                                android:fontFamily="sans-serif"
                                android:text="Button"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/transparent_white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_corner_container"
                            android:backgroundTint="@color/softBlue"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/notifyClientTittle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/notify_client"
                                android:textSize="20sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/notifyClientBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_corner_container"
                                android:backgroundTint="@color/blue"
                                android:fontFamily="sans-serif"
                                android:text="Button"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/transparent_white" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_corner_container"
                            android:backgroundTint="@color/softBlue"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/assignCarTittle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/assign_car"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/assignCarSubtittle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/chief_mechanic" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/asignCarsBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_corner_container"
                                android:backgroundTint="@color/blue"
                                android:fontFamily="sans-serif"
                                android:text="Button"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/transparent_white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_corner_container"
                            android:backgroundTint="@color/softBlue"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/newRepairTittle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/new_repair_job"
                                android:textSize="20sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/newRepairBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_corner_container"
                                android:backgroundTint="@color/blue"
                                android:fontFamily="sans-serif"
                                android:text="Button"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/transparent_white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_corner_container"
                            android:backgroundTint="@color/softBlue"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/checkStockTittle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/check_stock"
                                android:textSize="20sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/checkStockBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_corner_container"
                                android:backgroundTint="@color/blue"
                                android:fontFamily="sans-serif"
                                android:text="Button"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/transparent_white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/rounded_corner_container"
                    android:backgroundTint="@color/softBlue"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/newOrderTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_new_parts"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/newPiecesOrderBt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_container"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="sans-serif"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/transparent_white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>