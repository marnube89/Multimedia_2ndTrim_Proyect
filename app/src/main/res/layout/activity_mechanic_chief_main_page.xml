<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdient_list"
    android:orientation="vertical"
    tools:context=".chief_mechanic.MechanicChiefMainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:background="@drawable/rounded_corner_container"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/softBlue"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:tint="@color/transparent_white"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Bienvenido, Mecanico Jefe"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:background="@drawable/half_round_container"
        android:backgroundTint="@color/transparent_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:text="Acciones Disponibles"
            android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_corner_container"
                    android:backgroundTint="@color/softBlue"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/completeTaskTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completar Tareas"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/completeTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_container"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="sans-serif"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/transparent_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_corner_container"
                    android:backgroundTint="@color/softBlue"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/newTaskTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Definir Tareas"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/newTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_container"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="sans-serif"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/transparent_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_corner_container"
                    android:backgroundTint="@color/softBlue"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/checkRepairsTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consultar Reparaciones"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/checkRepairs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_container"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="sans-serif"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/transparent_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_corner_container"
                    android:backgroundTint="@color/softBlue"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/asignMechanicsToTaskTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asignar mecanicos a tareas"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/asignMechanicsToTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_container"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="sans-serif"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/transparent_white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>